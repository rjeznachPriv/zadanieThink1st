@model ToDoApp.Models.StudentViewModel


@using (Html.BeginForm("SaveStudent", "Home"))
{
    @Html.HiddenFor(m => m.Id)

    <div class="form-field">
        <div class="col-lg-12 label">
            @Html.LabelFor(m => m.FirstName)
        </div>
        <div class="col-lg-12">
            @Html.EditorFor(m => m.FirstName)
        </div>
        <div class="col-lg-12 validation-message">
            @Html.ValidationMessageFor(m => m.FirstName)
        </div>
    </div>

    <div class="form-field">
        <div class="col-lg-12 label">
            @Html.LabelFor(m => m.LastName)
        </div>
        <div class="col-lg-12">
            @Html.EditorFor(m => m.LastName)
        </div>
        <div class="col-lg-12 validation-message">
            @Html.ValidationMessageFor(m => m.LastName)
        </div>
    </div>

    <div class="form-field">
        <div class="col-lg-12 label">
            @Html.LabelFor(m => m.Age)
        </div>
        <div class="col-lg-12">
            @Html.EditorFor(m => m.Age)
        </div>
        <div class="col-lg-12 validation-message">
            @Html.ValidationMessageFor(m => m.Age)
        </div>
    </div>

    <div class="form-field">
        <div class="col-lg-12 label">
            @Html.LabelFor(m => m.Email)
        </div>
        <div class="col-lg-12">
            @Html.EditorFor(m => m.Email)
        </div>
        <div class="col-lg-12 validation-message">
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>

    <div class="form-field">
        <div class="col-lg-12 label">
            @Html.LabelFor(m => m.University)
        </div>
        <div class="col-lg-12">
            @Html.EditorFor(m => m.University)
        </div>
        <div class="col-lg-12 validation-message">
            @Html.ValidationMessageFor(m => m.University)
        </div>
    </div>

    <hr />

    <div class="form-field">
        <div class="col-lg-12">
            <button type="submit" class="custom-button">Save</button>
        </div>
    </div>
}
